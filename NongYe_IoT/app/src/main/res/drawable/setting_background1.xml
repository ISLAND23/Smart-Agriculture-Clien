<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    android:shape="rectangle">
    <!--填充颜色-->
    <solid android:color="#f0f0fe"/>

    <!--设置按钮的四个角为弧形-->
    <!--ndroid:radius="半径"-->
    <corners android:radius="15dip"/>

    <!--设置里面的文字跟按钮四个角的间隔-->
    <padding
        android:top="5dp"
        android:bottom="5dp"
        android:left="10dp"
        android:right="10dp" />

    <size
        android:width="150dp"
        android:height="20dp" />

</shape>